{% extends 'layout/index.twig' %}

{% block body %}
    <form action="{{ action }}" method="post" id="form-product" class="form-horizontal">
        <div class="form-group row requires">
            <label for="name" class="col-sm-2 col-form-label">Название товара</label>
            <div class="col-sm-10">
                <input type="text" name="name" class="form-control" id="name" value="{{ name }}" placeholder="Введите название товара">
            </div>
        </div>
        <div class="form-group row">
            <label for="image" class="col-sm-2 col-form-label">Изображение</label>
            <div class="col-sm-10">
                <input type="url" name="image" class="form-control" id="image" value="{{ image }}" placeholder="Добавьте ссылку на изображение">
            </div>
        </div>
        <div class="form-group row requires">
            <label for="price" class="col-sm-2 col-form-label">Цена</label>
            <div class="col-sm-10">
                <input type="number" name="price" class="form-control" id="price" value="{{ price }}" placeholder="Добавьте стоимость товара">
            </div>
        </div>

        <div class="form-group row requires">
            <label for="user" class="col-sm-2 col-form-label">Автор</label>
            <div class="col-sm-10">
                <select name="user_id" id="user" class="custom-select">
                    <option {% if not user_id %} selected {% endif %} value="">Выбрать автора</option>
                    {% for user in users %}
                        <option value="{{ user.user_id }} {% if user.user_id == user_id %} selected {% endif %}">{{ user.name }}</option>
                    {% endfor %}
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>

    </form>
{% endblock %}